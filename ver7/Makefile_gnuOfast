CXX = g++
COMPFLAGS = -g -std=c++11 -Ofast -Wall -Wextra
OPTFLAGS = -march=native
OMPFLAGS = -fopenmp-simd -fopenmp
REPFLAGS = -fopt-info-all-optall=$<.optrpt
INCLUDES =
LDLIBS =

CXXFLAGS = $(COMPFLAGS) $(OPTFLAGS) $(REPFLAGS) $(OMPFLAGS)

SOURCES = GSimulation.cpp main.cpp

.SUFFIXES: _Ofast.o .cpp

##########################################
OBJSC = $(SOURCES:.cpp=_Ofast.o)
##########################################

EXEC=nbody.x_Ofast

all: clean cpu

%_Ofast.o: %.cpp
	$(info )
	$(info Compiling the object file for CPU: )
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c $< -o $@

cpu: $(OBJSC)
	$(info )
	$(info Linking the CPU executable:)
	$(CXX) $(OMPFLAGS) -o $(EXEC) $(OBJSC)

run:
	$(info )
	$(info Run the default test case on CPU: )
	./nbody.x_Ofast

asm:GSimulation.cpp
	$(info)
	$(info Generate assembly code: )
	$(CXX) $(COMPFLAGS) $(OPTFLAGS) $^ -S

clean:
	rm -f $(OBJSC) nbody.x_Ofast *.optrpt *.s
